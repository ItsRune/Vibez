{
    "Commands": {
        "Enabled": { "type": "boolean", "default": false },
        "useDefaultNames": { "type": "boolean", "default": true },
        
        "MinRank": { "type": "number", "default": 255 },
        "MaxRank": { "type": "number", "default": 255 },
        
        "Prefix": { "type": "string", "default": ";" }
    },

    "RankSticks": {
        "Enabled": { "type": "boolean", "default": false },
        "Mode": { "type": "string", "default": "DetectionInFront", "options": ["DetectionInFront", "ClickOnPlayer"] },
        "MinRank": { "type": "number", "default": 255 },
        "MaxRank": { "type": "number", "default": 255 }
    },

    "Notifications": {
        "Enabled": { "type": "boolean", "default": true },
        "delayUntilRemoval": { "type": "number", "default": 5 },
        
        "Font": { "type": "string", "default": "Gotham" },
        "FontSize": { "type": "number", "default": 16 },
        "keyboardFontSizeMultiplier": { "type": "number", "default": 1.25 },
        
        "entranceTweenInfo": {
            "Style": { "type": "string", "default": "Quint" },
            "Direction": { "type": "string", "default": "InOut" },
            "timeItTakes": { "type": "number", "default": 1 }
        },
        
        "exitTweenInfo": {
            "Style": { "type": "string", "default": "Quint" },
            "Direction": { "type": "string", "default": "InOut" },
            "timeItTakes": { "type": "number", "default": 1 }
        }
    },

    "Interface": {
        "Enabled": { "type": "boolean", "default": false },
        "MinRank": { "type": "number", "default": 255 },
        "MaxRank": { "type": "number", "default": 255 }
    },

    "ActivityTracking": {
        "Enabled": { "type": "boolean", "default": false },
        "MinRank": { "type": "number", "default": 255 },

        "disableWhenInStudio": { "type": "boolean", "default": true },
        "disableWhenAFK": { "type": "boolean", "default": false },
        "delayBeforeMarkedAFK": { "type": "number", "default": 30 },
        "kickIfFails": { "type": "boolean", "default": false },
        "failMessage": { "type": "string", "default": "Uh oh! Looks like there was an issue initializing the activity tracker for you. Please try again later!" }
    },

    "Widgets": {
        "Enabled": { "type": "boolean", "default": false, "hidden": true }
    },

    "Misc": {
        "originLoggerText": { "type": "string", "default": "Origin" },
        "ignoreWarnings": { "type": "boolean", "default": false },
        "overrideGroupCheckForStudio": { "type": "boolean", "default": false },
        "isAsync": { "type": "boolean", "default": false },
        "rankingCooldown": { "type": "number", "default": 30 },
        "overrideGlobals": { "type": "boolean", "default": false },
        "usePromises": { "type": "boolean", "default": false, "hidden": true }
    }
}